<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/header.ejs") %>
        <script src="https://apis.google.com/js/platform.js?onload=init" async defer></script>

</head>

<body>
    <main>
        <h1>Profile page</h1>

        <script>
            function init() {
                gapi.load('auth2', function () {
                    /* Ready. Make a call to gapi.auth2.init or some other API */
                });
            }
        </script>

        <a href="#" onclick="signOut();">Sign out</a>
        <script>
            function signOut() {
                gapi.auth2.init({
                    client_id: '931638414558-j7n73fhlap5mo2euigehbuguo40vka0j.apps.googleusercontent.com'
                }).then(() => {
                    var auth2 = gapi.auth2.getAuthInstance();
                    auth2.signOut().then(function () {
                        document.location.href = "/logout";
                    })
                })
            }
        </script>

        <h1>Hi <%= email %>
        </h1>


        <h1>Settings</h1>
        <form action="/profile" method="POST">
            <input type="hidden" name="_csrf" value=document.cookie.XSRF-TOKEN>

            <label for="TUA">Sustained out of range limit:</label><br>
            <input type="text" id="TUA" name="TUA" value="30"><br>

            <label for="HV">Upper BG limit:</label><br>
            <input type="text" id="HV" name="HV" value="300"><br>

            <label for="LV">Lower BG limit:</label><br>
            <input type="text" id="LV" name="LV" value="50"><br>


            <button onclick=submit()>submit</button>

        </form>

    </main>

    <%- include("./partials/footer.ejs") %>
</body>

</html>